# global settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# for C and header files
[*.{h,c}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# for makefile
[{Makefile, Makefile.*}]
indent_style = tab
indent_size = 4
tab_width = 4
trim_trailing_whitespace = false

# for json files
[*.json]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# for markdown
[*.md]
trim_trailing_whitespace = false
